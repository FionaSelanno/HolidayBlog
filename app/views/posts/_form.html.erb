<%= form_for @post do |f| %>
  <%= @post.errors.full_messages.to_sentence %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 25 %>
  </P>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, cols:40, rows:7 %>
  </p>

  <%= f.submit %>

<% end %>

<p><%= link_to "[All Posts]", posts_path %></p>
