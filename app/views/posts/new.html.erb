<h1>Create a new post</h1>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 25 %>
  </P>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <%= f.submit "Create" %>

<% end %>

<p><%= link_to "[All Posts]", posts_path %></p>
