<h1><%= @post.title %></h1>
<p><%= @post.created_at %></p>
<p><%= @post.content %></p>

<p>
  <%= link_to "[All Posts]", posts_path %>
  <%= link_to "[Add new post]", new_post_path%>
  <%= link_to "[Edit Post]", edit_post_path(@post)%>
  <%= link_to "[Delete]", post_path(@post.id), method: :delete, data: {confirm: "Are you sure?"} %>
</p>
